<UserControl x:Class="ProjektniZadatakSBES.UserChecker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjektniZadatakSBES"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="183">
    <Grid>
        <CheckBox x:Name="checkBox" Background="#ecf0f1" HorizontalAlignment="Center" Margin="0,0,140,0" VerticalAlignment="Center"/>
        <StackPanel x:Name="StackPanel" Background="#ecf0f1" Margin="45,0,95,0">
            <Image x:Name="Image" Source="Resources/username.png" HorizontalAlignment="Center" Height="25" VerticalAlignment="Center" Width="25" Margin="0,2.5,0,0"/>
        </StackPanel>
        <Label x:Name="nameLabel" Foreground="#494041" FontSize="12" FontWeight="Light" HorizontalAlignment="Left" Margin="90,0,0,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" VerticalAlignment="Center" MaxWidth="130"/>
    </Grid>
</UserControl>
