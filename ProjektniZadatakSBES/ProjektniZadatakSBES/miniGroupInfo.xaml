<UserControl x:Class="ProjektniZadatakSBES.miniGroupInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjektniZadatakSBES"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="163"             
             MouseEnter="UserControl_MouseEnter"
             MouseLeave="UserControl_MouseLeave"
             MouseUp="UserControl_MouseUp">
    <Grid>
        <Image x:Name="userImage" Source="Resources/group.png" Margin="0,0,90,0" Width="20" Height="20"/>
        <Label x:Name="groupNameLabel" Foreground="#494041" FontSize="16" FontWeight="Light" Content="" HorizontalAlignment="Left" Margin="45,0,0,0" VerticalContentAlignment="Center" VerticalAlignment="Center" MaxWidth="110"/>
    </Grid>
</UserControl>
